; Introduction cutscene for Nightwing's story.
By McCready and Magus

[SceneDef]
spr = ending.sff
startscene = 0         ;Starting scene number (for debugging)

;------------------------------------
[Scene 0]
; Fade
fadein.time = 60       ;Time to take for fading in
fadein.col = 0,0,0     ;Use 255,255,255 for white-fade
fadeout.time = 15
fadeout.col = 0,0,0
; Screen color
clearcolor = 255,255,255
; Overlay Anims (from 0 to 9)
layerall.pos = 160,0   ;Default position for all layers
layer0.anim =  0       ;Anim action number
layer0.offset = -160,0   ;Position offset
layer0.starttime = 0   ;Time to start display


; Music
bgm=intro.mp3       ;Name of music file to play
bgm.loop = 0
; Total time
end.time = 450

;------------------------------------
[Scene 1]
; Fade
fadein.time = 15
fadeout.col = 0,0,0
fadeout.time = 15
fadeout.col = 0,0,0
; Screen color
; The previous clearcolor value is carried over by default
; Overlay Anims (from 0 to 9)
; The previous layerall.pos value is carried over by default
layer0.anim =  10
layer0.offset = -160,0
layer0.starttime = 0
; Total time
end.time = 900

;------------------------------------
[Scene 2]
; Fade
fadein.time = 15
fadeout.col = 0,0,0
fadeout.time = 15
fadeout.col = 0,0,0
; Overlay Anims (from 0 to 9)
layer0.anim =  20
layer0.offset = -160,0 
layer0.starttime = 0

; Total time
end.time = 700



;Background image
[Begin Action 0]
1,1, 0,0, -1


;Background image
[Begin Action 10]
1,0, 0,0, -1


;Background image
[Begin Action 20]
1,2, 0,0, -1


